<!DOCTYPE html>
<html>
<head>
    <title>Ostora FM Light</title>
    <link href="styles/kendo.common.min.css" rel="stylesheet" type="text/css" />
    <link href="styles/kendo.{{ param.theme }}.min.css" rel="stylesheet" type="text/css" />
    <script src="js/jquery.min.js" type="text/javascript"></script>
    <script src="js/kendo.web.min.js" type="text/javascript"></script>

    <script src="js/fm.js" type="text/javascript"></script>
    <link href="styles/style.css" rel="stylesheet" type="text/css" />
</head>
<body>


<div id="example" class="k-content">
    <div id="window" style="z-index: 50;">

        <ul id="menu" style="z-index: 100;" class="k-rtl">
            <li id="newDirWin">New folder</li>
            <li id="load">Upload</li>
            <li id="remove">Delete</li>
            <li id="copy">Copy</li>
            <li id="past">Past</li>
            <li id="settings">Settings</li>

            <li style="float: right;">
                Sort
                <ul>
                    <li data-id="name" class="sort">Name</li>
                    <li data-id="date" class="sort">Date</li>
                    <li data-id="size" class="sort">Size</li>
                </ul>
            </li>
            <li style="float: right;">
                View
                <ul>
                    <li data-id="icon" class="view">Icons</li>
                    <li data_id="list" class="view">List</li>
                </ul>
            </li>
            <li id="clipboard" style="float: right;">
                <img src="img/menu/clipboard.png" alt="" />
                Buffer <span id="buffer_count">({{ buffer_count }})</span>
                <ul id="buffer">
                    {{ buffer|raw }}
                </ul>
            </li>
        </ul>

        <div id="splitter" style="margin-top: 5px; z-index: 10;">
            <div id="treeview"></div>
            <div id="vertical" style="border: 0;">

                <div class="k-header">
                    <div style="float: left; padding: 3px 0 0 6px;">
                        <b>Size:</b> <span id="fm_total"></span>
                    </div>

                    <div style="float: right; padding: 2px 2px 0 0; margin-top: 1px;">
                        <span id="fm_sel">Select all</span>
                        <span id="fm_unsel">Unselect all</span>
                    </div>
                </div>

                <div id="structure"></div>

            </div>
        </div>

    </div>
</div>

<div id="loadWin" style="display: none;"><input name="files" type="file" id="files" /></div>

<div id="settingsWin" style="display: none;">
{% include "settings.twig" %}
</div>

<input type="hidden" id="wheight" value="{{ param.height }}" />
<input type="hidden" id="wwidth" value="{{ param.width }}" />
<input type="hidden" id="start_dir" value="{{ select }}" />

</body>
</html>