<div class="modal filemanager-modal-window" id="uploader-window">
    <div class="modal-content">
        <div class="modal-body">
            <div class="form-content">
                <input name="files" id="files" type="file" />

                <div class="uploading-file-list"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="uploader-window-clear" class="k-button">Clear</button>
            <button type="button" id="uploader-window-close" class="k-button">Close</button>
        </div>
    </div>
</div>

<div class="modal filemanager-modal-window" id="downloader-window">
    <div class="modal-content">
        <div class="modal-body">
            <div class="form-content">
                <div class="download-file-list"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="download-window-clear" class="k-button">Clear</button>
            <button type="button" id="download-window-close" class="k-button">Close</button>
        </div>
    </div>
</div>

<div class="modal filemanager-modal-window" id="configWin">
    <div id="tabstrip">
        <ul>
            <li class="k-state-active">Settings</li>
            <li>About</li>
        </ul>

        <div>
            <div style="overflow: hidden; margin-bottom: 3px;">
                Preview width: <span style="float: right;">{{ param.pre_width }}px.</span>
            </div>
            <div style="overflow: hidden; margin-bottom: 3px;">
                Preview height: <span style="float: right;">{{ param.pre_height }}px.</span>
            </div>
            <div style="overflow: hidden; margin-bottom: 3px;">
                Preview quality: <span style="float: right;">{{ param.quality }}%</span>
            </div>
            <div style="overflow: hidden; margin-bottom: 3px;">
                Preview background: <span style="float: right;">{{ param.rgb }}</span>
            </div>
        </div>


        <div>
            <h4>File manager </h4>

            <p>File manager (Silex + Kendo UI)</p>

            <p>Github: <a href="https://github.com/Zazza/fm-silex-kendo">https://github.com/Zazza/fm-silex-kendo</a></p>
        </div>
    </div>
</div>

<script type="text/x-kendo-template" id="breadcrubmPathFirstTemplate">
    <li>
        <a style="cursor: pointer;" class="breadcrumb-path-li" data-id="/">
            <span class="fa fa-home"></span>
        </a>
    </li>
</script>
<script type="text/x-kendo-template" id="breadcrubmPathTemplate">
    <li>
        <a style="cursor: pointer;" class="breadcrumb-path-li" data-id="#: id #">#: name #</a>
    </li>
</script>

<div class="modal filemanager-modal-window" id="new-folder-window">
    <div class="modal-content">
        <div class="modal-body">
            <div class="form-content">
                <input type="text" class="k-textbox" id="new-folder-window-textbox" value="" style="width: 100%;" />
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="new-folder-confirm" class="k-button">Ok</button>
            <button type="button" id="new-folder-window-close" class="k-button">Close</button>
        </div>
    </div>
</div>

<div class="modal filemanager-modal-window" id="delete-window">
    <div class="modal-content">
        <div class="modal-body">
            <div class="form-content">
                Delete?
            </div>
        </div>
        <div class="modal-footer">
