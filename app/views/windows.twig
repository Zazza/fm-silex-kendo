<script type="text/x-kendo-template" id="fileUploadTemplate">
    <div class="upload-file-progress" title="#: name #" data-path="#: path #">
        <div class="upload-status-progress"></div>
        <div style="position: relative; overflow: hidden; margin: 4px 10px;">
            <div class="pull-left upload-file-text">
                #: name #
            </div>
            <div class="pull-right">
                <a class="btn btn-xs btn-danger k-upload-action uploaderRemove" data-id="#: name #" type="button" title="Stop">
                    <i class="fa fa-stop"></i> Stop
                </a>
            </div>
        </div>
    </div>
</script>

<script type="text/x-kendo-template" id="fileDownloadTemplate">
    <div class="download-file-progress" title="#: name #">
        <div class="download-status-progress"></div>
        <div style="position: relative; overflow: hidden; margin: 4px 10px;">
            <div class="pull-left download-file-text">
                #: name #
            </div>
            <div class="pull-right">
                <a class="btn btn-xs btn-danger k-upload-action downloadRemove" data-id="#: name #" type="button" title="Stop">
                    <i class="fa fa-stop"></i> Stop
                </a>
            </div>
        </div>
    </div>
</script>
